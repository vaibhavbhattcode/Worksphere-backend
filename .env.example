# Production Environment Configuration Template
# Copy this file to .env and fill in your production values

# ==================== SERVER CONFIGURATION ====================
NODE_ENV=production
PORT=5000

# ==================== DATABASE ====================
# MongoDB Atlas connection string (recommended for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# ==================== JWT SECRET ====================
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ==================== SESSION SECRETS ====================
# Generate unique secrets for each role
SESSION_SECRET=your_user_session_secret_here
SESSION_SECRET_COMPANY=your_company_session_secret_here
SESSION_SECRET_ADMIN=your_admin_session_secret_here

# ==================== FRONTEND & BACKEND URLS ====================
# Your production frontend URL (no trailing slash)
FRONTEND_URL=https://yourdomain.com

# Your production backend URL (no trailing slash)
BACKEND_URL=https://api.yourdomain.com

# ==================== GOOGLE OAUTH (OPTIONAL) ====================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==================== EMAIL CONFIGURATION ====================
# Gmail SMTP settings (recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM="Work Sphere <noreply@yourdomain.com>"

# ==================== EXTERNAL APIs ====================
# RapidAPI for job matching/recommendations
RAPIDAPI_KEY=your_rapidapi_key

# Google Gemini API for AI features
GEMINI_API_KEY=your_gemini_api_key

# ==================== RESUME PARSER ====================
# Resume parser service URL
RESUME_PARSER_URL=http://localhost:5001/parse

# ==================== SECURITY SETTINGS ====================
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==================== FILE UPLOAD LIMITS ====================
# Maximum file sizes (in MB)
MAX_RESUME_SIZE=5
MAX_PHOTO_SIZE=5
MAX_LOGO_SIZE=2

# ==================== CORS SETTINGS ====================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== LOGGING ====================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ==================== OPTIONAL: AWS S3 (for file storage) ====================
# If using S3 instead of local storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ==================== OPTIONAL: REDIS (for caching) ====================
# If using Redis for caching
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
